<div class="log_in">
  <div class="lg">
    <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
            required: false,
            autofocus: true,
            label_html: { class: 'labels' },
            input_html: { autocomplete: "email", class: "common_input" } %>

    <%= f.input :password,
        required: false,
        label_html: { class: 'labels' },
        input_html: { autocomplete: "current-password", maxlength: 20, class: "common_input" } %>

    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>